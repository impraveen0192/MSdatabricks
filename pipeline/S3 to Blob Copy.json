{
	"name": "S3 to Blob Copy",
	"properties": {
		"description": "S3 to Blob Copy",
		"activities": [
			{
				"name": "S3 to Azure blob",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "FileSystemSource",
						"recursive": true
					},
					"sink": {
						"type": "BlobSink"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"columnMappings": {
							"AIRPORT_ID": "AIRPORT_ID",
							"AIRPORT": "AIRPORT",
							"DISPLAY_AIRPORT_NAME": "DISPLAY_AIRPORT_NAME",
							"LATITUDE": "LATITUDE",
							"LONGITUDE": "LONGITUDE"
						}
					}
				},
				"inputs": [
					{
						"referenceName": "AmazodatasetS3",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "AzureBlob",
						"type": "DatasetReference"
					}
				]
			}
		]
	}
}